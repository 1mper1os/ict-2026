---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Descubre el Camino Inca y Machu Picchu con nuestros tours exclusivos" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="navbar">
      <div class="container">
        <a href="/" class="logo">üèîÔ∏è Inca Trail Adventures</a>
        <ul class="nav-links">
          <li><a href="#tours">Tours</a></li>
          <li><a href="#features">Caracter√≠sticas</a></li>
          <li><a href="#contact">Contacto</a></li>
        </ul>
      </div>
    </nav>
    <slot />
    <footer>
      <div class="container">
        <p>&copy; 2025 Inca Trail Adventures. Todos los derechos reservados.</p>
      </div>
