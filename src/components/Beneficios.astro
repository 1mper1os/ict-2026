---
// WhyChooseUs.astro - Sakura Expeditions
const beneficios = [
  {
    id: 1,
    icon: "direct",
    titulo: "Direct Operators",
    descripcion: "We organize and operate our tours, guaranteeing quality, safety, and fair prices.",
    color: "#ff8a2b"
  },
  {
    id: 2,
    
    icon: "team",
    titulo: "Specialized Team",
    descripcion: "We have professional guides, experienced drivers, and office staff always ready to help you.",
    color: "#0d5b59"
  },
  {
    id: 3,
    icon: "personalized",
    titulo: "Personalized Attention",
    descripcion: "We focus on every detail to make your experience unique, safe, and worry-free.",
    color: "#d32f2f"
  },
  {
    id: 4,
    icon: "authentic",
    titulo: "Authentic Experiences",
    descripcion: "We design routes and activities that connect with the living culture, history, and nature of Peru.",
    color: "#4caf50"
  },
  {
    id: 5,
    icon: "support",
    titulo: "Permanent Support",
    descripcion: "We provide assistance and support before, during, and after your trip, ensuring peace of mind at all times.",
    color: "#2196f3"
  },
  {
    id: 6,
    icon: "experience",
    titulo: "Experience and Trust",
    descripcion: "Years of experience in the tourism sector support our commitment to excellence.",
    color: "#9c27b0"
  }
];

const estadisticas = [
  { numero: "10+", label: "Years in Business", icon: "calendar" },
  { numero: "100%", label: "Direct Operation", icon: "check" },
  { numero: "24/7", label: "Continuous Support", icon: "support" },
  { numero: "4.8★", label: "Average Rating", icon: "star" }
];
---

<section class="why-choose-us-section" id="contacto">
  <!-- Hero Section -->
  <div class="why-hero">
    <div class="container">
      <div class="hero-content">
        <!-- Badge superior -->
        <div class="top-badge">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          <span>Excelencia Garantizada</span>
        </div>

        <h1 class="main-title">
          Why <span class="highlight">Choose Us</span>?
        </h1>
        
        <div class="intro-text">
          <p class="lead-text">
            We are <strong>direct operators in Cusco</strong> with over <strong>10 years of experience in the tourism market</strong>. 
            We have specialists in creating authentic and experiential experiences.
          </p>
          <p class="secondary-text">
            Our strategic location in the <strong>historic center of Cusco</strong> allows us to offer direct service, without intermediaries,
             with personalized attention from the first contact.
          </p>
        </div>

        <!-- Estadísticas Destacadas -->
        <div class="stats-row">
          {estadisticas.map((stat) => (
            <div class="stat-box">
              <div class="stat-icon">
                {stat.icon === 'calendar' && (
                  <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                  </svg>
                )}
                {stat.icon === 'check' && (
                  <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                  </svg>
                )}
                {stat.icon === 'support' && (
                  <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M12 6v6l4 2"></path>
                  </svg>
                )}
                {stat.icon === 'star' && (
                  <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                  </svg>
                )}
              </div>
              <div class="stat-content">
                <div class="stat-number">{stat.numero}</div>
                <div class="stat-label">{stat.label}</div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Decorative elements -->
    <div class="decorative-shape shape-1"></div>
    <div class="decorative-shape shape-2"></div>
    <div class="decorative-shape shape-3"></div>
  </div>

  <!-- Beneficios Section -->
  <div class="beneficios-section">
    <div class="container">
      <!-- Section Header -->
      <div class="section-header">
        <span class="section-badge">Exclusive Advantages</span>
        <h2 class="section-title">
          benefits of <span class="highlight">Travel with Us</span>
        </h2>
        <p class="section-description">
          Every detail is designed to offer you the best experience in the Peruvian Andes.
        </p>
      </div>

      <!-- Grid de Beneficios -->
      <div class="beneficios-grid">
        {beneficios.map((beneficio, index) => (
          <article class="beneficio-card" data-index={index}>
            <div class="card-number">{String(beneficio.id).padStart(2, '0')}</div>
            
            <div class="card-icon" style={`--icon-color: ${beneficio.color}`}>
              {beneficio.icon === 'direct' && (
                <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              )}
              {beneficio.icon === 'location' && (
                <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              )}
              {beneficio.icon === 'team' && (
                <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                  <circle cx="9" cy="7" r="4"></circle>
                  <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                  <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
              )}
              {beneficio.icon === 'personalized' && (
                <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>
              )}
              {beneficio.icon === 'authentic' && (
                <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                  <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
              )}
              {beneficio.icon === 'support' && (
                <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              )}
              {beneficio.icon === 'experience' && (
                <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="8" r="7"></circle>
                  <polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline>
                </svg>
              )}
            </div>

            <div class="card-content">
              <h3 class="card-title">{beneficio.titulo}</h3>
              <p class="card-description">{beneficio.descripcion}</p>
            </div>

            <!-- Decorative corner -->
            <div class="card-corner" style={`background: ${beneficio.color}`}></div>
            
            <!-- Hover effect -->
            <div class="card-glow"></div>
          </article>
        ))}
      </div>
    </div>
  </div>

  <!-- Trust Section -->
  <div class="trust-section">
    <div class="container">
      <div class="trust-content">
        <div class="trust-icon">
          <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            <path d="M9 12l2 2 4-4"></path>
          </svg>
        </div>
        <div class="trust-text">
          <h3 class="trust-title">Your Peace of Mind is Our Priority</h3>
          <p class="trust-description">
            With years of experience and thousands of satisfied travelers, we guarantee that your adventure in the Andes will be safe, authentic, and unforgettable.
          </p>
        </div>
        <div class="trust-badges">
          <div class="trust-badge">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
            <span>Certificate</span>
          </div>
          <div class="trust-badge">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            <span>Sure</span>
          </div>
          <div class="trust-badge">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
              <polyline points="22 4 12 14.01 9 11.01"></polyline>
            </svg>
            <span>Verification</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- CTA Final -->
  <div class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2 class="cta-title">Ready to Live a Unique Experience?</h2>
        <p class="cta-description">
          Where adventure and culture come together to create unforgettable memories.
        </p>
        <div class="cta-buttons">
          <a href="#tours" class="btn btn-primary">
            <span>See Our Tours</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          <a href="#contacto" class="btn btn-outline">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
            <span>Contact Us Now</span>
          </a>
        </div>
        <p class="cta-note">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M12 16v-4"></path>
            <path d="M12 8h.01"></path>
          </svg>
          Personalized attention from the first contact • No intermediaries
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  .why-choose-us-section {
    background: #ffffff;
    position: relative;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Why Hero */
  .why-hero {
    background: linear-gradient(135deg, #073642 0%, #0d5b59 100%);
    padding: 6rem 0 5rem;
    position: relative;
    overflow: hidden;
  }

  .decorative-shape {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
  }

  .shape-1 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, #ffd700, transparent);
    top: -100px;
    right: -100px;
    animation: float 20s infinite ease-in-out;
  }

  .shape-2 {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, #ff8a2b, transparent);
    bottom: -80px;
    left: -80px;
    animation: float 15s infinite ease-in-out;
    animation-delay: -5s;
  }

  .shape-3 {
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, #ffffff, transparent);
    top: 50%;
    left: 50%;
    animation: float 10s infinite ease-in-out;
    animation-delay: -10s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(30px, -30px);
    }
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
  }

  .top-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.7rem;
    background: rgba(255, 215, 0, 0.15);
    border: 2px solid rgba(255, 215, 0, 0.3);
    backdrop-filter: blur(10px);
    padding: 0.8rem 1.8rem;
    border-radius: 50px;
    color: #ffd700;
    font-weight: 700;
    font-size: 0.95rem;
    margin-bottom: 2rem;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .main-title {
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 900;
    color: white;
    margin-bottom: 2rem;
    line-height: 1.1;
  }

  .main-title .highlight {
    background: linear-gradient(135deg, #ffd700, #ff8a2b);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .intro-text {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .lead-text {
    color: rgba(255, 255, 255, 0.95);
    font-size: clamp(1.1rem, 2vw, 1.4rem);
    line-height: 1.7;
  }

  .lead-text strong {
    color: #ffd700;
    font-weight: 800;
  }

  .secondary-text {
    color: rgba(255, 255, 255, 0.85);
    font-size: clamp(1rem, 1.5vw, 1.2rem);
    line-height: 1.7;
  }

  .secondary-text em {
    color: #ff8a2b;
    font-style: italic;
    font-weight: 600;
  }

  /* Stats Row */
  .stats-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-top: 3rem;
  }

  .stat-box {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 2rem 1.5rem;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    transition: all 0.4s ease;
  }

  .stat-box:hover {
    background: rgba(255, 255, 255, 0.15);
    transform: translateY(-8px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
  }

  .stat-icon {
    width: 60px;
    height: 60px;
    background: rgba(255, 215, 0, 0.2);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffd700;
  }

  .stat-content {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: #ffd700;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.9rem;
    font-weight: 600;
  }

  /* Beneficios Section */
  .beneficios-section {
    padding: 6rem 0;
    background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
    position: relative;
  }

  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto 4rem;
  }

  .section-badge {
    display: inline-block;
    background: linear-gradient(135deg, #ff8a2b, #ff6b35);
    color: white;
    padding: 0.6rem 1.5rem;
    border-radius: 30px;
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 1rem;
  }

  .section-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: #073642;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .section-title .highlight {
    background: linear-gradient(135deg, #ff8a2b, #d32f2f);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-description {
    color: #666;
    font-size: 1.1rem;
    line-height: 1.7;
  }

  /* Beneficios Grid */
  .beneficios-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .beneficio-card {
    background: white;
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
    position: relative;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid transparent;
  }

  .beneficio-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    border-color: var(--icon-color);
  }

  .card-number {
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 4rem;
    font-weight: 900;
    color: rgba(0, 0, 0, 0.03);
    line-height: 1;
    z-index: 1;
  }

  .card-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.6));
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--icon-color);
    margin-bottom: 1.5rem;
    position: relative;
    z-index: 2;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.4s ease;
  }

  .beneficio-card:hover .card-icon {
    transform: scale(1.1) rotateY(360deg);
    background: var(--icon-color);
    color: white;
  }

  .card-content {
    position: relative;
    z-index: 2;
  }

  .card-title {
    font-size: 1.4rem;
    font-weight: 800;
    color: #073642;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .card-description {
    color: #666;
    line-height: 1.7;
    font-size: 1rem;
  }

  .card-corner {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 100px;
    height: 100px;
    opacity: 0.1;
    border-radius: 24px 0 24px 0;
    transition: all 0.4s ease;
  }

  .beneficio-card:hover .card-corner {
    opacity: 0.15;
    width: 120px;
    height: 120px;
  }

  .card-glow {
    position: absolute;
    inset: -2px;
    background: linear-gradient(45deg, var(--icon-color), transparent);
    border-radius: 24px;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 0;
    filter: blur(10px);
  }

  .beneficio-card:hover .card-glow {
    opacity: 0.3;
  }

  /* Trust Section */
  .trust-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #073642 0%, #0d5b59 100%);
    position: relative;
  }

  .trust-content {
    display: grid;
    grid-template-columns: auto 1fr auto;
    gap: 3rem;
    align-items: center;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 3rem;
    border-radius: 30px;
  }

  .trust-icon {
    width: 100px;
    height: 100px;
    background: rgba(255, 215, 0, 0.2);
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffd700;
    flex-shrink: 0;
  }

  .trust-text {
    flex: 1;
  }

  .trust-title {
    font-size: 2rem;
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
  }

  .trust-description {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .trust-badges {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex-shrink: 0;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    padding: 0.8rem 1.5rem;
    border-radius: 50px;
    color: white;
    font-weight: 700;
    font-size: 0.9rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    white-space: nowrap;
  }

  .trust-badge svg {
    color: #ffd700;
  }

  /* CTA Section */
  .cta-section {
    padding: 6rem 0;
    background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
  }

  .cta-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 900;
    color: #073642;
    margin-bottom: 1rem;
  }

  .cta-description {
    color: #666;
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
    line-height: 1.7;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-bottom: 2rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1.2rem 2.5rem;
    border-radius: 50px;
    font-weight: 800;
    font-size: 1rem;
    text-decoration: none;
