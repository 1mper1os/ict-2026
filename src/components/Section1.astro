---
// CaminoIncaSection.astro - Versión Mejorada con Slugs
const tours = [
  {
    title: "INCA TRAIL 2 DAYS",
    description: "Experience the most famous hike in South America. Walk ancient Inca trails and discover breathtaking landscapes.",
    image: "../../public/2146185.jpg",
    badge: "MOST POPULAR",
    difficulty: "Moderate",
    reviews: 328,
    locations: [
      "Cusco",
      "Ollantaytambo",
      "Llactapata",
      "Runkuracay",
      "Sayacmarca",
      "Phuyupatamarca",
      "Wiñayhuayna",
      "Machu Picchu",
      "Aguas Calientes"
    ],
    days: "2 days",
    nights: "1 night",
    price: "465.00",
    oldPrice: "510.00",
    included: ["Briefing","Professional Guide","Transportation","Train","Admissions","Hotel"],
    slug: "https://sakuraexpeditions.com/2-days-short-inca-trail/",
    bookingSlug: "https://sakuraexpeditions.com/booking/?id=38"
  },
  {
    title: "INCA TRAIL EXPRESS",
    description: "Short version of the classic Inca Trail. Ideal for those with limited time but don't want to miss the experience.",
    image: "../../public/4894.jpg",
    badge: "BEST DEAL",
    difficulty: "Easy",
    reviews: 215,
    locations: [
      "Cusco",
      "Ollantaytambo",
      "Llactapata",
      "Runkuracay",
      "Sayacmarca",
      "Phuyupatamarca",
      "Wiñayhuayna",
      "Machu Picchu",
      "Aguas Calientes"
    ],
    days: "1 day",
    nights: "",
    price: "380.00",
    oldPrice: "430.00",
    included: ["Briefing","Professional Guide","Transportation","Train","Box Lunch"],
    slug: "https://sakuraexpeditions.com/inca-trail-express-full-day/",
    bookingSlug: "https://wa.link/obdnm6"
  },
  {
    title: "INCA TRAIL 4 DAYS",
    description: "The complete original route with all the archaeological sites. An unforgettable adventure through Inca history.",
    image: "../../public/inti-punku-vistas-1_65_11zon.webp",
    badge: "COMPLETE ADVENTURE",
    difficulty: "Moderate",
    reviews: 442,
    locations: [
      "Cusco",
      "Ollantaytambo",
      "Llactapata",
      "Runkuracay",
      "Sayacmarca",
      "Phuyupatamarca",
      "Wiñayhuayna",
      "Machu Picchu",
      "Aguas Calientes"
    ],
    days: "4 days",
    nights: "3 nights",
    price: "690.00",
    oldPrice: "750.00",
    included: ["Briefing","Expert Guide","Transportation","Train","All Inclusive","Premium Camping","MP Admission"],
    slug: "https://sakuraexpeditions.com/inca-trail-to-machu-picchu-4-days/",
    bookingSlug: "https://sakuraexpeditions.com/booking/?id=31"
  }
];
---

<section class="camino-inca-section" id="camino-inca">
  <div class="container">
    <div class="section-header">
      <span class="subtitle">Discover the best routes</span>
      <h2 class="section-title">
        AVAILABLE WALKS OF THE <span class="highlight">INCA TRAIL 2026</span>
      </h2>
      <p class="section-description">
        Choose your ideal adventure to Machu Picchu. All our tours include certified guides and top-quality equipment.
      </p>
    </div>

    <div class="cards-grid">
      {tours.map((tour) => (
        <article class="tour-card">
          <!-- Badge Superior -->
          <div class="card-badge">{tour.badge}</div>

          <!-- Imagen con overlay -->
          <div class="card-image-wrapper">
            <a href={tour.slug}>
              <img src={tour.image} alt={tour.title} class="card-image" />
            </a>
            <div class="image-overlay">
              <div class="difficulty-badge" data-difficulty={tour.difficulty.toLowerCase()}>
                {tour.difficulty}
              </div>
            </div>
          </div>

          <!-- Contenido de la tarjeta -->
          <div class="card-content">
            <!-- Header con título  -->
            <div class="card-header-info">
              <a href={tour.slug} class="title-link">
                <h3 class="card-title">{tour.title}</h3>
              </a>
            </div>

            <!-- Descripción -->
            <p class="card-description">{tour.description}</p>

            <!-- Duración y precio destacados -->
            <div class="main-info">
              <div class="duration-box">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <div>
                  <div class="duration-days">{tour.days}</div>
                  <div class="duration-nights">{tour.nights}</div>
                </div>
              </div>
              <div class="price-box">
                <div class="price-wrapper">
                  <span class="old-price">${tour.oldPrice}</span>
                  <span class="current-price">${tour.price}</span>
                </div>
                <div class="price-label">Por persona</div>
              </div>
            </div>

            <!-- Ubicaciones en formato compacto -->
            <div class="locations-compact">
              <div class="location-icon-header">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3" fill="white"></circle>
                </svg>
                <span>Recorrido:</span>
              </div>
              <div class="locations-tags">
                {tour.locations.slice(0, 4).map((location) => (
                  <span class="location-tag">{location}</span>
                ))}
                <span class="location-more">+{tour.locations.length - 4} más</span>
              </div>
            </div>

            <!-- Incluido -->
            <div class="included-section">
              <div class="included-title">✓ Incluye:</div>
              <div class="included-items">
                {tour.included.map((item) => (
                  <span class="included-tag">{item}</span>
                ))}
              </div>
            </div>

            <!-- Botones de acción -->
            <div class="card-actions">
              <a href={tour.slug} class="btn btn-outline">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <line x1="12" y1="16" x2="12" y2="12"></line>
                  <line x1="12" y1="8" x2="12.01" y2="8"></line>
                </svg>
                SEE DETAILS
              </a>
              <a href={tour.bookingSlug} class="btn btn-primary">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14"></path>
                  <path d="M12 5l7 7-7 7"></path>
                </svg>
                Book Now
              </a>
            </div>
          </div>

          <!-- Hover effect decorativo -->
          <div class="card-shine"></div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .camino-inca-section {
    padding: 6rem 2rem;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8f0f5 100%);
    position: relative;
    overflow: hidden;
  }

  .camino-inca-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 300px;
    background: radial-gradient(ellipse at top, rgba(13, 95, 95, 0.05), transparent);
    pointer-events: none;
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .subtitle {
    display: inline-block;
    color: #d32f2f;
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 0.5rem;
  }

  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.8rem);
    font-weight: 800;
    color: #002b4f;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: -0.5px;
    line-height: 1.2;
  }

  .section-title .highlight {
    color: #d32f2f;
    position: relative;
    display: inline-block;
  }

  .section-title .highlight::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #d32f2f, #ff8c42);
    border-radius: 2px;
  }

  .section-description {
    max-width: 700px;
    margin: 0 auto;
    color: #555;
    font-size: 1.05rem;
    line-height: 1.7;
  }

  /* Cards Grid */
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: 2.5rem;
    justify-items: center;
  }

  /* Tour Card */
  .tour-card {
    background: white;
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    max-width: 440px;
    width: 100%;
    position: relative;
  }

  .tour-card:hover {
    transform: translateY(-12px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }

  /* Badge Superior */
  .card-badge {
    position: absolute;
    top: 20px;
    right: 20px;
    background: linear-gradient(135deg, #d32f2f, #b71c1c);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 1px;
    z-index: 10;
    box-shadow: 0 4px 15px rgba(211, 47, 47, 0.4);
    text-transform: uppercase;
  }

  /* Imagen */
  .card-image-wrapper {
    position: relative;
    height: 280px;
    overflow: hidden;
    background: #000;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .tour-card:hover .card-image {
    transform: scale(1.15);
  }

  .image-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
  }

  .difficulty-badge {
    background: rgba(255, 255, 255, 0.95);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .difficulty-badge::before {
    content: '●●●';
    font-size: 0.6rem;
    letter-spacing: 2px;
  }

  .difficulty-badge[data-difficulty="easy"] {
    color: #4caf50;
  }

  .difficulty-badge[data-difficulty="easy"]::before {
    content: '●○○';
    color: #4caf50;
  }

  .difficulty-badge[data-difficulty="moderate"] {
    color: #ff9800;
  }

  .difficulty-badge[data-difficulty="moderate"]::before {
    content: '●●○';
    color: #ff9800;
  }

  .difficulty-badge[data-difficulty="challenging"] {
    color: #d32f2f;
  }

  .difficulty-badge[data-difficulty="challenging"]::before {
    content: '●●●';
    color: #d32f2f;
  }

  /* Card Content */
  .card-content {
    padding: 2rem;
  }

  /* Header con */
  .card-header-info {
    margin-bottom: 1rem;
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    color: #002b4f;
    letter-spacing: 0.3px;
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  /* Descripción */
  .card-description {
    color: #666;
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  /* Main Info - Duración y Precio */
  .main-info {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1.5rem;
    padding: 1.2rem;
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    border-radius: 12px;
  }

  .duration-box {
    display: flex;
    align-items: center;
    gap: 0.8rem;
  }

  .duration-box svg {
    color: #002b4f;
    flex-shrink: 0;
  }

  .duration-days {
    font-size: 1.1rem;
    font-weight: 700;
    color: #002b4f;
    line-height: 1;
  }

  .duration-nights {
    font-size: 0.8rem;
    color: #666;
    line-height: 1;
  }

  .price-box {
    text-align: right;
  }

  .price-wrapper {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.2rem;
  }

  .old-price {
    font-size: 0.85rem;
    color: #999;
    text-decoration: line-through;
  }

  .current-price {
    font-size: 1.6rem;
    font-weight: 800;
    color: #d32f2f;
    line-height: 1;
  }

  .price-label {
    font-size: 0.75rem;
    color: #666;
    margin-top: 0.2rem;
  }

  /* Locations Compact */
  .locations-compact {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #f8f9fa;
    border-radius: 10px;
    border-left: 3px solid #d32f2f;
  }

  .location-icon-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.8rem;
    color: #002b4f;
    font-weight: 600;
    font-size: 0.85rem;
  }

  .location-icon-header svg {
    color: #d32f2f;
  }

  .locations-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .location-tag {
    background: white;
    padding: 0.3rem 0.7rem;
    border-radius: 6px;
    font-size: 0.75rem;
    color: #555;
    font-weight: 500;
    border: 1px solid #e0e0e0;
  }

  .location-more {
    padding: 0.3rem 0.7rem;
    font-size: 0.75rem;
    color: #d32f2f;
    font-weight: 600;
  }

  /* Included Section */
  .included-section {
    margin-bottom: 1.5rem;
  }

  .included-title {
    font-size: 0.85rem;
    font-weight: 600;
    color: #002b4f;
    margin-bottom: 0.7rem;
  }

  .included-items {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .included-tag {
    background: linear-gradient(135deg, #e8f5e9, #c8e6c9);
    color: #002b4f;
    padding: 0.4rem 0.8rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Botones */
  .card-actions {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 0.8rem;
  }

  .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.9rem 1.2rem;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .btn svg {
    width: 16px;
    height: 16px;
  }

  .btn-outline {
    background: white;
    color: #002b4f;
    border: 2px solid #002b4f;
  }

  .btn-outline:hover {
    background: #002b4f;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(13, 95, 95, 0.3);
  }

  .btn-primary {
    background: linear-gradient(135deg, #d32f2f, #b71c1c);
    color: white;
    box-shadow: 0 4px 15px rgba(211, 47, 47, 0.3);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(211, 47, 47, 0.4);
  }

  /* Efecto shine en hover */
  .card-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.3),
      transparent
    );
    transition: left 0.6s ease;
    pointer-events: none;
  }

  .tour-card:hover .card-shine {
    left: 100%;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .camino-inca-section {
      padding: 4rem 1.5rem;
    }

    .section-header {
      margin-bottom: 3rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .cards-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .card-content {
      padding: 1.5rem;
    }

    .main-info {
      grid-template-columns: 1fr;
      text-align: left;
    }

    .price-box {
      text-align: left;
    }

    .price-wrapper {
      align-items: flex-start;
    }

    .card-actions {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .card-badge {
      font-size: 0.65rem;
      padding: 0.4rem 0.8rem;
      top: 15px;
      right: 15px;
    }

    .card-image-wrapper {
      height: 220px;
    }

    .card-title {
      font-size: 1rem;
    }

    .current-price {
      font-size: 1.4rem;
    }
  }
</style>