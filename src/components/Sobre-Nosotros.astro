    .certificaciones-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .team-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .story-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .story-image {
      order: -1;
    }

