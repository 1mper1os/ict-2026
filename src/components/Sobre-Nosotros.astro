  }

  .stat-card:hover .stat-icon {
    transform: translateY(-5px) scale(1.1);
    background: rgba(255, 255, 255, 0.15);
  }

  .stat-number {
    font-size: 3rem;
    font-weight: 900;
    color: #ffd700;
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
    font-weight: 500;
  }

  /* Valores Section */
  .valores-section {
    padding: 6rem 0;
    background: #ffffff;
  }

  .section-header-center {
    text-align: center;
    max-width: 700px;
    margin: 0 auto 4rem;
  }

  .section-description {
    color: #666;
