---
const tours = [
  {
    id: 1,
    name: "Camino Inca 1 Día",
    duration: "1 día",
    difficulty: "Moderado",
    price: "$250",
    description: "Caminata corta por el tramo final del Camino Inca llegando por la Puerta del Sol",
    highlights: ["Puerta del Sol", "Machu Picchu", "Guía experto"]
  },
  {
    id: 2,
    name: "Camino Inca 2 Días",
    duration: "2 días / 1 noche",
    difficulty: "Moderado",
    price: "$480",
    description: "Experiencia completa del Camino Inca con camping y vistas espectaculares",
    highlights: ["Camping", "Wiñay Wayna", "Machu Picchu", "Todas las comidas"]
  },
  {
    id: 3,
    name: "Camino Inca 4 Días",
    duration: "4 días / 3 noches",
    difficulty: "Desafiante",
    price: "$750",
    description: "La ruta clásica completa del Camino Inca con todos los sitios arqueológicos",
    highlights: ["Experiencia completa", "Sitios arqueológicos", "Warmiwañusca", "Camping premium"]
  },
  {
    id: 4,
    name: "Machu Picchu Tren Vistadome",
    duration: "1 día",
    difficulty: "Fácil",
    price: "$380",
    description: "Viaje en tren de lujo con ventanas panorámicas y servicio a bordo",
    highlights: ["Ventanas panorámicas", "Show cultural", "Snacks gourmet"]
  },
  {
    id: 5,
    name: "Machu Picchu Tren Voyager",
    duration: "1 día",
    difficulty: "Fácil",
    price: "$320",
    description: "Tren cómodo con excelentes vistas del Valle Sagrado",
    highlights: ["Asientos cómodos", "Vistas espectaculares", "Servicio incluido"]
  },
  {
    id: 6,
    name: "Machu Picchu Tren Expedition",
    duration: "1 día",
    difficulty: "Fácil",
    price: "$280",
    description: "Opción económica pero confortable para llegar a Machu Picchu",
    highlights: ["Mejor precio", "Asientos cómodos", "Vistas increíbles"]
  },
  {
    id: 7,
    name: "Salkantay Trek",
    duration: "5 días / 4 noches",
    difficulty: "Desafiante",
    price: "$650",
    description: "Ruta alternativa espectacular con vistas al nevado Salkantay",
    highlights: ["Nevado Salkantay", "Aguas termales", "Selva tropical", "Menos turistas"]
  }
];
---

<section id="tours" class="tours-section">
  <div class="container">
    <h2>Nuestros Tours</h2>
    <p class="subtitle">Elige la aventura perfecta para ti</p>
    <div class="tours-grid">
      {tours.map(tour => (
        <div class="tour-card">
          <div class="tour-header">
            <h3>{tour.name}</h3>
            <div class="tour-badge">{tour.difficulty}</div>
          </div>
          <div class="tour-info">
            <span class="duration">⏱️ {tour.duration}</span>
            <span class="price">{tour.price}</span>
          </div>
          <p class="description">{tour.description}</p>
          <ul class="highlights">
            {tour.highlights.map(highlight => (
              <li>✓ {highlight}</li>
            ))}
          </ul>
          <button class="book-button">Reservar Ahora</button>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .tours-section {
    padding: 4rem 2rem;
    background: #f7fafc;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  h2 {
    text-align: center;
    font-size: 3rem;
    color: #2d3748;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    text-align: center;
    font-size: 1.2rem;
    color: #718096;
    margin-bottom: 3rem;
  }

  .tours-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
  }

  .tour-card {
    background: white;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: transform 0.3s, box-shadow 0.3s;
    display: flex;
    flex-direction: column;
  }

  .tour-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.15);
  }

  .tour-header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    margin-bottom: 1rem;
  }

  h3 {
    color: #2d3748;
    font-size: 1.5rem;
    margin: 0;
    flex: 1;
  }

  .tour-badge {
    background: #667eea;
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    white-space: nowrap;
    margin-left: 0.5rem;
  }

  .tour-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .duration {
    color: #718096;
    font-size: 0.95rem;
  }

  .price {
    color: #667eea;
    font-size: 1.5rem;
    font-weight: bold;
  }

  .description {
    color: #4a5568;
    line-height: 1.6;
    margin-bottom: 1rem;
    flex: 1;
  }

  .highlights {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem 0;
  }

  .highlights li {
    color: #2d3748;
    padding: 0.4rem 0;
    font-size: 0.95rem;
  }

  .book-button {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 1rem;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
    margin-top: auto;
  }

  .book-button:hover {
    transform: scale(1.02);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
  }

  @media (max-width: 768px) {
    .tours-grid {
      grid-template-columns: 1fr;
    }
  }
</style>